{
	"extends": "./node_modules/@dojo/scripts/tsconfig/esm.json",
	"compilerOptions": {
		"jsx": "react",
		"jsxFactory": "tsx",
		"types": [ "intern" ],
		"lib": [
			"dom",
			"es5",
			"es2015.core",
			"es2015.iterable",
			"es2015.promise",
			"es2015.symbol",
			"es2015.symbol.wellknown",
			"es2015.proxy"
		]
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"./tests/**/*.ts",
		"./tests/**/*.tsx"
	]
}
