{
  "name": "@dojo/stores",
  "version": "0.3.0",
  "description": "Application data store for Dojo 2",
  "homepage": "https://dojo.io",
  "engines": {
    "npm": ">=3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dojo/stores.git"
  },
  "license": "BSD-3-Clause",
  "scripts": {
    "prepublish": "grunt peerDepInstall",
    "precommit": "lint-staged",
    "prettier": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "test": "grunt test"
  },
  "peerDependencies": {
    "@dojo/core": "~0.3.0",
    "@dojo/has": "~0.1.1",
    "@dojo/shim": "~0.2.3"
  },
  "devDependencies": {
    "@dojo/interfaces": "~0.2.0",
    "@dojo/loader": "~0.1.1",
    "@types/grunt": "~0.4.0",
    "@types/sinon": "^1.16.35",
    "codecov.io": "0.1.6",
    "glob": "^7.0.6",
    "grunt": "~1.0.1",
    "grunt-dojo2": "latest",
    "grunt-tslint": "5.0.1",
    "husky": "0.14.3",
    "intern": "~4.1.0",
    "lint-staged": "6.0.0",
    "prettier": "1.9.2",
    "sinon": "^1.17.6",
    "tslint": "5.8.0",
    "tslint-plugin-prettier": "1.3.0",
    "typescript": "~2.6.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  }
}
