{
	"version": "2.0.2",
	"compilerOptions": {
		"declaration": true,
		"experimentalDecorators": true,
		"module": "umd",
		"lib": [
			"dom",
			"es5",
			"es2015.iterable",
			"es2015.promise",
			"es2015.symbol",
			"es2015.symbol.wellknown"
		],
		"downlevelIteration": true,
		"noImplicitAny": true,
		"outDir": "_build/",
		"removeComments": false,
		"sourceMap": true,
		"target": "es5",
		"moduleResolution": "node",
		"strictNullChecks": true,
		"noImplicitThis": true,
		"noEmitHelpers": true,
		"types": [ "intern" ]
	},
	"include": [
		"./typings/index.d.ts",
		"./src/**/*.ts",
		"./tests/**/*.ts"
	]
}
