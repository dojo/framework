{
	"capabilities": {
		"browserstack.debug": false,
		"project": "Dojo 2",
		"name": "@dojo/routing"
	},
	"environments": [
		{ "browserName": "node" }
	],
	"functionalSuites": [
		"./_build/tests/functional/**/*.js"
	],
	"browser": {
		"suites": [
			"./_build/tests/unit/all.js"
		],
		"loader": {
			"script": "dojo2",
			"options": {
				"packages": [
					{ "name": "src", "location": "_build/src" },
					{ "name": "tests", "location": "_build/tests" },
					{ "name": "dojo", "location": "node_modules/intern/browser_modules/dojo" },
					{ "name": "@dojo", "location": "node_modules/@dojo" },
					{ "name": "maquette", "location": "node_modules/maquette/dist", "main": "maquette" },
					{ "name": "sinon", "location": "node_modules/sinon/pkg", "main": "sinon" }
				]
			}
		}
	},
	"node": {
		"suites": [
			"./_build/tests/unit/**/*.js",
			"!./_build/tests/unit/**/all.js",
			"!./_build/tests/unit/Router.js",
			"!./_build/tests/unit/history/HashHistory.js",
			"!./_build/tests/unit/history/StateHistory.js"
		]
	},
	"coverage": [
		"./_build/src/**/*.js",
		"!./_build/src/examples/**"
	],
	"configs": {
		"local": {
			"tunnel": "selenium",
			"tunnelOptions": { },
			"environments+": [
				{ "browserName": "chrome" }
			]
		},
		"browserstack": {
			"tunnel": "browserstack",
			"tunnelOptions": {
			},
			"environments": [
				{ "browserName": "internet explorer", "version": "11" },
				{ "browserName": "edge" },
				{ "browserName": "firefox", "platform": "WINDOWS" },
				{ "browserName": "chrome", "platform": "WINDOWS" },
				{ "browserName": "safari", "version": "9.1", "platform": "MAC" },
				{ "browserName": "iPhone", "version": "9.1" }
			]
		}
	}
}
