    "@types/express": "~4.0.39",
    "@types/glob": "~5.0.0",
    "@types/grunt": "~0.4.0",
    "@types/multer": "~1.3.3",
    "@types/node": "^6.0.0",
    "@types/sinon": "~1.16.0",
    "benchmark": "^1.0.0",
    "express": "~4.15.3",
    "grunt": "^1.0.1",
    "grunt-contrib-clean": ">=1.0.0",
    "grunt-contrib-copy": ">=1.0.0",
    "grunt-dojo2": "latest",
