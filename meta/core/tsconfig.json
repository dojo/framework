		"./tests/intern-local.ts",
		"./tests/intern.ts",
		"./tests/functional/all.ts",
		"./tests/unit/all.ts",
		"./tests/unit/global.ts",
		"./tests/unit/has.ts",
		"./tests/unit/lang.ts",
		"./tests/unit/Promise.ts",
